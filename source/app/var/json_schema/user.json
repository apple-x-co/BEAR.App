{
  "$id": "user.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "properties": {
    "id": {
      "type": [
        "integer",
        "string"
      ]
    },
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 100
    },
    "password": {
      "type": "string",
      "maxLength": 255
    },
    "created_at": {
      "type": "string",
      "format": "datetime"
    },
    "updated_at": {
      "type": "string",
      "format": "datetime"
    }
  }
}
